	private double getBooksRentPrice(int daysRented){
		int DAYS_CHILDRENS = 7;
		double thisAmount = 1.5;
        if (daysRented > DAYS_CHILDRENS) {
            thisAmount += (daysRented - DAYS_CHILDRENS) * 1.5;
        }
        return thisAmount;
	}
	
