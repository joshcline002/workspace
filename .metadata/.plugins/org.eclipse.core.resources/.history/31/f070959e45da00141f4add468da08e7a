
public class DecoratorTest {

	public static void main(String[] args) {
		Convo basic = new DefaultConvo("Josh");
		
		Convo awesome = new ActionConvo(basic);
		
		Convo dundun = new DramaConvo(basic);
		
		System.out.println("Normal hello/goodbye");
		basic.introduction();
		basic.goodbye();
		
		System.out.println("\nHello/Goodbye with action decorator");
		awesome.introduction();
		awesome.goodbye();
		
		System.out.println("\nHello/Goodbye with drama decorator");
		dundun.introduction();
		dundun.goodbye();
	}

}
